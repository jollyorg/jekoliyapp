<App>
  <Font File="Assets\Fonts\Roboto\Roboto-Black.ttf" ux:Global="Roboto" />

  <DockPanel>
      <JavaScript>
          var Observable = require("FuseJS/Observable");
          module.exports.pages = Observable("#4527a0", "#536dfe", "#448aff");
      </JavaScript>
      <PageControl ux:Name="navbar">
          <Each Items="{pages}">
              <Page Color="{}">

              </Page>
          </Each>
      </PageControl>
      <PageIndicator Dock="Bottom" Navigation="navbar" Alignment="Center" Color="#263238" Width="100%">
          <Rectangle ux:Template="Dot" Width="30" Height="30" Margin="20" CornerRadius="15" Color="#80d8ff">
            <Text Alignment="Center" FontSize="11" Font="Roboto" Color="Black">A</Text>
              <ActivatingAnimation>
                  <Scale Factor="1.2" />
              </ActivatingAnimation>
          </Rectangle>
      </PageIndicator>
  </DockPanel>
</App>
